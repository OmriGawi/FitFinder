<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="405dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="@color/primaryColor"
                android:orientation="vertical">

                <!-- CardView -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_profile"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="20dp"
                    android:backgroundTint="@color/background"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    app:layout_constraintVertical_bias="0.5">

                    <!-- Image View -->
                    <ImageView
                        android:id="@+id/iv_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="iv_profile_description"
                        android:scaleType="centerCrop"
                        tools:src="@tools:sample/avatars"
                        tools:ignore="HardcodedText" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_fullName"
                    android:text="Aviel Gabay"
                    android:fontFamily="@font/poppinssemibold"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:textSize="21sp">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_userType"
                    android:text="Trainer"
                    android:fontFamily="@font/poppinssemibold"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:textSize="16sp">
                </TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_clock2"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Morning, Evening"
                        android:fontFamily="@font/poppinssemibold"
                        android:textColor="@color/white"
                        android:layout_marginLeft="5dp"
                        android:textSize="16sp"/>
                </LinearLayout>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="290dp"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_sportCategory1"
                            android:fontFamily="@font/poppinssemibold"
                            android:textSize="16sp"
                            android:textColor="@color/secondaryColor"
                            android:text="swimming">
                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_skillLevel1"
                            android:fontFamily="@font/poppinssemibold"
                            android:textSize="14sp"
                            android:textColor="@color/secondaryColor"
                            android:text="Advanced">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_sportCategory2"
                            android:fontFamily="@font/poppinssemibold"
                            android:textSize="16sp"
                            android:textColor="@color/secondaryColor"
                            android:text="Calisthenics">
                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_skillLevel2"
                            android:fontFamily="@font/poppinssemibold"
                            android:textSize="14sp"
                            android:textColor="@color/secondaryColor"
                            android:text="Advanced">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_sportCategory3"
                            android:fontFamily="@font/poppinssemibold"
                            android:textSize="16sp"
                            android:textColor="@color/secondaryColor"
                            android:text="Football">
                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_skillLevel3"
                            android:fontFamily="@font/poppinssemibold"
                            android:textSize="14sp"
                            android:textColor="@color/secondaryColor"
                            android:text="Advanced">
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
        
        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="25dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_additionalPictures"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="10dp"
                android:scrollbars="vertical"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="2">
            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>
        
    </LinearLayout>
</ScrollView>